<h2>Create A Product Review!</h2>
<% if flash.has?(:message) %>
<p style="color:red;"><%= flash[:message] %></p>
<% end %>
<form action= "/reviews" method="post">
  <input type="text" name="product_name" placeholder="Product Name">
 <textarea rows="8" cols="200" name="content" placeholder="Write Review Here"></textarea>  <input type="integer" name=rating placeholder="Rating(1-10)">
  <input type="submit" placeholder="Create Review">
</form>